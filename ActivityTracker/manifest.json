{
  "name": "Activity monitor",
  "version": "1.0",
  "description": "User activity monitor!",

  "permissions": [
  "tabs",
  "storage",
  "alarms",
  "webRequest",
  "webRequestBlocking",
  "*://*/*"],
  "content_scripts": [{ 
    "js": [ "modal.js"],
    "matches": [ "*://*/*"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "manifest_version": 2,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32" : "icon32.png",
      "48" : "icon48.png",
      "128" : "icon128.png"
    }
  }
}
