{
  "name": "Activity monitor",
  "version": "1.0",
  "description": "User activity monitor!",
  
  "permissions": [
  "tabs",
  "storage",
  "alarms",
  "declarativeContent"],
  
  "background": {
    "scripts": ["background.js"],
	"persistent": true
  },
  "manifest_version": 2,
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
		"32" : "icon32.png",
		"48" : "icon48.png",
		"128" : "icon128.png"
	}
  }
}